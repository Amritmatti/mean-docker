  "version": "0.2.0",
  "configurations": [
    {
      "type": "docker",
      "request": "launch",
      "name": "Docker Node.js Launch and Attach",
      "preLaunchTask": "docker-run: debug",
      "platform": "node",
      "node": {
        "remoteRoot": "/api"
      }
    }
  ],
  "tasks": [
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "DEBUG": "*"
        }
      },
      "node": {
        "enableDebugging": true
      }
    }
  ]
}
